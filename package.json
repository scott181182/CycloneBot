{
  "name": "cyclone-bot",
  "version": "0.1.0",
  "description": "cyclone-bot",
  "license": "MIT",
  "repository": "",
  "author": "Scott Fasone",
  "keywords": [],
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "clean": "rimraf lib",
    "lint": "tslint --force --format verbose \"src/**/*.ts\"",
    "build": "npm run clean && npm run lint && echo Using TypeScript && tsc --version && tsc --pretty && cp -R config lib",
    "dist": "rimraf dist && mkdir dist && tsc --pretty -d false --outDir dist && cp -R config dist && npm run clean:dist",
    "clean:dist": "find ./dist/config -regex .*\\.private\\.pure -exec truncate {} -s 0 \\; && echo tst > ./dist/config/mode.txt",
    "test": "npm run build && mocha --compilers ts:ts-node/register --recursive 'test/**/*-spec.ts'",
    "coverage": "nyc --include='src/**/*.ts' --reporter=text --reporter=html --reporter=lcov mocha --compilers ts:ts-node/register --recursive 'test/**/*.test.ts'",
    "watch": "npm run build -- --watch",
    "watch:test": "npm run test -- --watch"
  },
  "dependencies": {
    "body-parser": "^1.17.2",
    "express": "^4.15.3",
    "fluxjs": "^0.1.0",
    "pure-config": "^0.6.1",
    "request": "^2.81.0"
  },
  "devDependencies": {
    "@types/alexa-sdk": "^1.0.8",
    "@types/body-parser": "^1.16.4",
    "@types/chai": "^3.0.0",
    "@types/express": "^4.0.36",
    "@types/mocha": "^2.0.0",
    "@types/node": "^7.0.0",
    "@types/request": "^2.0.0",
    "chai": "^3.0.0",
    "coveralls": "^2.0.0",
    "mocha": "^3.0.0",
    "nyc": "^10.0.0",
    "rimraf": "^2.0.0",
    "ts-node": "^3.0.0",
    "tslint": "^5.0.0",
    "typescript": "^2.0.0"
  },
  "engines": {
    "node": ">=4.0.0"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "lib"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [],
    "all": true
  }
}
